<Window x:Name="wnMain" x:Class="TCPUIClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Socket Client v2.1.2" Height="329.524" Width="695.621" Icon="Aha-Soft-Desktop-Halloween-Skeleton.ico" Closing="Window_Closing" GotFocus="Window_GotFocus" MouseMove="Window_MouseMove" Activated="Window_Activated" ResizeMode="CanMinimize">
    <Grid Height="301" VerticalAlignment="Top" Initialized="Grid_Initialized" GotFocus="Grid_GotFocus">
        <Grid.Background>
            <ImageBrush ImageSource="black-texture-background-wallpaper-sfv11hls.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txMessage" HorizontalAlignment="Left" Height="52" Margin="10,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" TextChanged="txMessage_TextChanged" KeyDown="txMessage_KeyDown"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="285,236,0,0" VerticalAlignment="Top" Width="99" Height="23" Click="btnSend_Click"/>
        <TextBox x:Name="txMain" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="196" Margin="11,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373"/>
        <Label Content="Log" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Foreground="White" Height="26" Width="30"/>
        <Label Content="Status:" Margin="384,212,57,0" VerticalAlignment="Top" Foreground="White" Height="26"/>
        <TextBox x:Name="txStatus" HorizontalAlignment="Left" Height="52" Margin="389,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" RenderTransformOrigin="0.554,-0.713"/>
        <Button Content="Clear Log" HorizontalAlignment="Left" Margin="285,265,0,0" VerticalAlignment="Top" Width="99" Height="23" Click="Button_Click"/>
        <Expander Header="Expander" HorizontalAlignment="Left" Height="100" Margin="918,398,-76,-100" VerticalAlignment="Top" Width="76">
            <Grid Background="#FFE5E5E5"/>
        </Expander>
        <Image HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="21" Margin="977,4,-80,0" Source="inward-black-help.png" Opacity="0.9" MouseLeftButtonUp="Image_MouseLeftButtonUp" Cursor="Help">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <TabControl HorizontalAlignment="Left" Height="184" Margin="389,33,0,0" VerticalAlignment="Top" Width="282" Background="{x:Null}" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="System" Margin="0" HorizontalAlignment="Left" Width="56">
                <Grid Margin="4,-2,-4,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="49,73,0,0" VerticalAlignment="Top" Width="55" Height="24" Click="btnConnect_Click"/>
                    <Button x:Name="btnDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="110,73,0,0" VerticalAlignment="Top" Width="69" Height="24" Click="btnDisconnect_Click"/>
                    <TextBox x:Name="txServername" HorizontalAlignment="Left" Height="23" Margin="0,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Text="192.168.1.110" LostFocus="txServername_LostFocus" KeyDown="txServername_KeyDown"/>
                    <Label Content="Server Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Height="26" Foreground="White"/>
                    <TextBox x:Name="txPort" HorizontalAlignment="Left" Height="24" Margin="0,73,0,0" TextWrapping="Wrap" Text="3333" VerticalAlignment="Top" Width="45" TextChanged="txPort_TextChanged" KeyDown="txPort_KeyDown"/>
                    <Label Content="Port:" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top" Width="119" Height="25" Foreground="White"/>
                    <CheckBox x:Name="cbOutputGPData" Content="Keep Log File" Margin="0,102,159,31" Click="cbOutputGPData_Click" Foreground="White" Checked="cbOutputGPData_Checked"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbGamePad" Header="Gamepad" Margin="4,0,-8,0">
                <Grid Margin="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="67*"/>
                        <ColumnDefinition Width="95*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbGameEnabled" Content="Enable Gamepad" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Click="cbGameEnabled_Click" Foreground="White" Width="107"/>
                    <Label Content="Dead Zone" HorizontalAlignment="Left" Margin="5,89,0,0" VerticalAlignment="Top" Foreground="White" Width="75"/>
                    <Slider x:Name="slDeadZone" HorizontalAlignment="Left" Margin="85,93,0,0" VerticalAlignment="Top" Width="186" Maximum="20000" ValueChanged="Slider_ValueChanged" Cursor="Hand" Grid.ColumnSpan="2"/>
                    <Slider x:Name="slTXRate" HorizontalAlignment="Left" Margin="85,64,0,0" VerticalAlignment="Top" Width="186" Height="24" Maximum="750" ValueChanged="Slider_ValueChanged_1" Cursor="Hand" Grid.ColumnSpan="2"/>
                    <Label Content="TX Rate" HorizontalAlignment="Left" Margin="5,63,0,0" VerticalAlignment="Top" Foreground="White" Width="68" Cursor="Hand"/>
                    <Slider x:Name="slCenter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Margin="85,120,0,0" Maximum="38250" Minimum="23250" Value="30750" Cursor="Hand" SmallChange="1" ValueChanged="slCenter_ValueChanged" Grid.ColumnSpan="2"/>
                    <Label x:Name="lbCenter" Content="Center" HorizontalAlignment="Left" Margin="5,116,0,0" VerticalAlignment="Top" Foreground="White" Width="68" Cursor="Hand" MouseLeftButtonUp="lbCenter_MouseLeftButtonUp"/>
                    <CheckBox x:Name="cbTranslate" Content="Translate Gamepad Data" Grid.Column="1" HorizontalAlignment="Left" Margin="8,6,-3,0" VerticalAlignment="Top" Foreground="White" Width="162" Click="cbTranslate_Click"/>
                    <ComboBox x:Name="cbGamepadType" HorizontalAlignment="Left" Margin="5,27,0,0" VerticalAlignment="Top" Width="266" Height="25" SelectedIndex="0" SelectionChanged="cbGamepadType_SelectionChanged" Grid.ColumnSpan="2" DropDownClosed="cbGamepadType_DropDownClosed">
                        <ComboBoxItem Content="Server Controlled Gamepad UDP"/>
                        <ComboBoxItem Content="Server Controlled Gamepad TCP"/>
                        <ComboBoxItem Content="Static Gamepad"/>
                        <ComboBoxItem Content="Client Controlled Gamepad UDP"/>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbVideoType" Header="Video" Margin="0,0,-12,0" HorizontalAlignment="Right" Width="50">
                <Grid Margin="0,-4,0,-1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="66*"/>
                        <ColumnDefinition Width="177*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbVideo" Content="Enable Video" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Click="cbVideo_Click" Grid.ColumnSpan="3" Margin="5,11,0,0"/>
                    <ComboBox x:Name="cbVideoType" HorizontalAlignment="Left" Margin="5,53,0,0" VerticalAlignment="Top" Width="192" Grid.ColumnSpan="4" SelectedIndex="0" SelectionChanged="cbVideoType_SelectionChanged" DropDownClosed="cbVideoType_DropDownClosed">
                        <ComboBoxItem Content="Foscam"/>
                        <ComboBoxItem Content="Client Controlled Foscam"/>
                        <ComboBoxItem Content="GStreamer"/>
                    </ComboBox>
                    <CheckBox x:Name="cbVideoControl" Content="Enable Video Controls" HorizontalAlignment="Left" Margin="5,31,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Foreground="White" Click="cbVideoControl_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
